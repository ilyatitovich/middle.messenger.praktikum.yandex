<main class='signin'>
  <section class='user-form__card'>
    <h1 id="signin-heading" class='user-form__title'>Вход</h1>
    <form class='user-form' aria-labelledby="signin-heading">

      {{>
        userFormField
        label='Логин'
        id='login'
        name='login'
        type='text'
        placeholder='Логин'
        isRequired=true
        errorMessage='Введите логин'
      }}

      {{>
        userFormField
        label='Пароль'
        type='password'
        id='password'
        name='password'
        placeholder='Пароль'
        isRequired=true
        errorMessage='Неверный логин или пароль'
      }}

      <button type='submit' class='user-form__button'>Войти</button>
    </form>
    <a
      href='/signup'
      class='user-form__link'
      aria-label='Перейти к странице регистрации'
    >Зарегистрироваться</a>
  </section>
</main>
