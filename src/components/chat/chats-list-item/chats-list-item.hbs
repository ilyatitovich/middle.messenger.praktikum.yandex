<a href='/chat/{{id}}'>
  <div class='chat-item'>
    <div class='avatar'>
      <img src='{{avatar}}' alt='Аватар чата' />
    </div>
    <div class='chat-content'>
      <div class='chat-header'>
        <span class='chat-item__name'>{{name}}</span>
        <span class='chat-item__time'>{{timestamp}}</span>
      </div>
      <div class='chat-item__last-message'>{{lastMessage}}</div>
    </div>
    {{#if qtyNewMessages}}
      <div class='chat-badge'>{{qtyNewMessages}}</div>
    {{/if}}
  </div>
</a>
